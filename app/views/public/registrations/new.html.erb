<h2>新規会員登録</h2>

<%= form_with scope: :customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  名前
  <div class="field">
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  フリガナ
  <div class="field">
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>

  <div class="field">
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code, autofocus: true %>
  </div>

  <div class="field">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
  <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
  <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>


