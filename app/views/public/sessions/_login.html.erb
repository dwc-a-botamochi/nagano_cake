<%= form_with scope: scope, url: url, local: true do |f| %>
    <div class="form-group row justify-content-center">
        <label class="col-2 col-form-label"><%= f.label :email, "メールアドレス" %></label>
        <div class="col-4">
        <%= f.email_field :email, class: "form-control", autofocus: true, 
            autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <label class="col-2 col-form-label"><%= f.label :password, "パスワード" %></label>
        <div class="col-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>
    </div>

    <div class="form-group row justify-content-center pt-3">
    <%= f.submit "ログイン", class: "btn btn-primary text-center", style: "width: 15%;" %>
    </div>
<% end %>