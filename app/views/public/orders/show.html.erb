<div class="container-fluid">
  <div class="row ml-5 mt-3">
    <div class="col-md-5">
      <span><strong>注文情報</strong></span>
      <table class="table table-bordered mt-2">
        <tr>
          <td class="bg-light">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="bg-light align-middle">配送先</td>
          <td>
            〒<%= @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="bg-light">支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td class="bg-light">ステータス</td>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-2">
      <span><strong>請求情報</strong></span>
      <table class="table table-bordered mt-2">
        <tr>
          <% total = 0 %>
          <% @order.order_details.each do |order_detail| %>
            <% order_detail.subtotal %>
            <% total += order_detail.subtotal %>
          <% end %>
          <td class="bg-light">商品合計</td>
          <td><%= total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="bg-light">配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class="bg-light"><strong>ご請求額</strong></td>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row ml-5 mt-3">
    <div class="col-md-5">
      <span><strong>注文内容</strong></span>
      <table class="table table-bordered mt-2">
        <thead>
          <tr class="bg-light">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>