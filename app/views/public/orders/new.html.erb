<% if @order.errors.any? %>
  <div class="error_messages">
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row ml-5 mt-4">
    <h4 class="bg-light ml-4">注文情報入力</h4>
  </div> 
</div>
<div class="container-fluid">
  <%= form_with model: @order, url: orders_path do |f| %>
  <div class="row mt-3 ml-5">
    <h4><strong>支払方法</strong></h4>
  </div>

  <div class="ml-5">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0), class: "ml-5" %>
    <%= f.label :payment_method, Order.payment_methods[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1), class: "ml-5" %>
    <%= f.label :payment_method, Order.payment_methods[:transfer]%>
  </div>

  <div class="row mt-4 ml-5">
    <h4><strong>お届け先</strong></h4>
  </div>
  <div class="ml-5">
    <%= f.radio_button :select_address, 0, checked: true, class: "ml-5" %>
    <%= f.label :select_address_0, "ご自身の住所" %><br>

    <%# <p class="ml-5 pl-4"> %>
      <%#  〒<%= current_customer.post_code %>  <%#= current_customer.address %><br>
      <%#= "#{current_customer.last_name} #{current_customer.first_name}" %>
    <%# </p> %>

  </div>
  <%# if current_customer.addresses.present? %>
  <div class="ml-5">
    <%= f.radio_button :select_address, 1, class: "ml-5" %>
    <%= f.label :select_address_1, "登録済住所から選択" %><br>
    <%# 
    <p class="ml-5 pl-4">
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </p>
  </div>
  <%# end %>

  <div class="ml-5">
    <%= f.radio_button :select_address, 2, class: "ml-5 mt-4" %>
    <%= f.label :select_address_2, "新しいお届け先" %><br>
    <div class="form-group row ml-3">
      <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "col-sm-2 col-form-label ml-5" %>
      <%= f.text_field :post_code, placeholder: "0000000" %>
    </div>
    <div class="form-group row ml-3">
      <%= f.label :address, "住所", class: "col-sm-2 col-form-label ml-5" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-3" %>
    </div>
    <div class="form-group row ml-3">
      <%= f.label :name, "宛名", class: "col-sm-2 col-form-label ml-5" %>
      <%= f.text_field :name, placeholder: "令和道子" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mt-3 text-center">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>