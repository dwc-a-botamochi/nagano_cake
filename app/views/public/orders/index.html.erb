<% if @orders.any? %>
  <div class="container">
    <div class="row ml-5 mt-4">
      <h3 class="ml-5">注文履歴一覧</h3>
    </div>
    <div class="my-3">
      <table class="table table-bordered %">
        <thead>
          <tr class="bg-light">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle">
              <%= I18n.l(order.created_at, format: :default) %>
              </td>
              <td class="align-middle">
                〒<%= order.post_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td class="align-middle">
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td class="align-middle">
                <%= order.total_payment.to_s(:delimited) %>円
              </td>
              <td class="align-middle">
                <%= I18n.t("enums.order.status.#{order.status}") %>
              </td>
              <td class="align-middle text-center">
                <%= link_to "表示する", order_path(order), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="container-fluid">
    <div class="row" style="margin-top: 200px; margin-bottom: 200px;">
      <div class="col-md-12 text-center">
        <h4>注文履歴はありません。</h4>
        <%= link_to "商品一覧へ戻る", root_path, class: "btn btn-primary mt-3" %>
      </div>
    </div>
  </div>
<% end %>
