<div class="container m-5"> 
  <div class="row"> 
    <div class="col-3 px-4"><%= render 'public/items/genre_list', genres: @genres %></div>
      <div class="col-4 mx-4">
        <%= image_tag @item.get_image(320,240), size: "320x240" %>
      </div>
      <div class="col-4 p-0">
        <h5 class="font-weight-bold my-3 ml-2"><%= @item.name %></h5>
        <p class="mb-5 ml-5"><%= simple_format(@item.introduction) %></p>
        <p class="mb-5">
          <span class="font-weight-bold">￥<%= number_with_delimiter((@item.price * 1.1).floor) %></span>
          <small class="ms-1">(税込)</small>
        </p>
        <%= form_with model: @cart_item do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="d-flex align-items-center">
            <div class="col-auto pl-0">
              <%= f.select :amount, (1..10).to_a, { prompt: "個数選択" }, class: 'form-control' %>
            </div>
            <div class="col-auto">
              <%= f.submit 'カートに入れる', class: 'btn btn-success px-4 ms-3' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>