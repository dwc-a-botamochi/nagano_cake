<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col">
      <h4>商品一覧</h4>
    </div>
  </div>
  
  <div class="row">
    <% @items.each do |item| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <%= link_to item_path(item) do %>
            <%= image_tag item.get_image(200,150), size: "200x150" %>
            <p class="text-dark mt-2"><%= item.name %></p>
            <p class="text-dark mt-1">￥<%= number_with_delimiter((item.price * 1.1).floor) %></p>
        <% end %>
        </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
  <%= paginate @items %>
  </div>
</div>