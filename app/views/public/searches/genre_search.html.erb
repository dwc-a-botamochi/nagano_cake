<div class="container m-5"> 
  <div class="row"> 
    <div class="col-3 px-4"><%= render 'public/items/genre_list', genres: @genres %></div>
    <div class="col-9">
      <div class="col-5 ml-5 mb-4">
        <% if @items.total_count <= @items.limit_value %>
          <h4 class="text-center bg-light">
            検索結果(全<%= @items.total_count %>件中<%= @items.total_count %>件表示)
          </h4>
        <% else %>
          <h4 class="text-center bg-light">
            検索結果(全<%= @items.total_count %>件中<%= @items.limit_value %>件表示)
          </h4>
        <% end %>
      </div>
      <div class="d-flex flex-wrap  offset-1"><%= render 'public/items/index', items: @items %></div>
      <div class="d-flex justify-content-center mt-4"><%= paginate @items %></div>
    </div>
  </div>
</div>