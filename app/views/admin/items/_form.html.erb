<%= form_with model: [:admin, item] do |f| %>
        <div class ="row ml-5 mb-3">
            <label class="col-sm-2 col-form-label">商品画像</label>
            <div class= "col-sm-4 form-horizontal">
                <%= f.file_field :image, accept: "image/*" %>
            </div>
        </div>

        <div class ="row ml-5 mb-3">
            <label class="col-sm-2 col-form-label">商品名</label>
            <div class= "col-sm-4 form-horizontal">
                <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
            </div>
        </div>

        <div class ="row ml-5 mb-3">
            <label class="col-sm-2 col-form-label">商品説明</label>
            <div class= "col-sm-4 form-horizontal">
                <%= f.text_area :introduction, class: "form-control", rows: "7", placeholder: "ここに説明文を記述します" %>
            </div>
        </div>

        <div class ="row ml-5 mb-3">
            <label class="col-sm-2 col-form-label">ジャンル</label>
            <div class= "col-sm-10 form-horizontal">
            <%= f.select :genre_id, options_from_collection_for_select(genres, :id, :name), { prompt: "--選択してください--" }, class: "form-select" %>
            </div>               
        </div>

        <div class ="row ml-5 mb-3">   
            <label class="col-sm-2 col-form-label">税抜価格</label>
                <div class= "col-sm-6 form-horizontal  d-flex align-items-center">
                    <%= f.text_field :price, class: "form-control w-auto", placeholder: "1000" %>
                    <span class="ms-2">円</span>
                </div>
        </div>

        <div class="row ml-5 mb-3 align-items-center">
            <label class="col-sm-2 col-form-label">販売ステータス</label>
            <div class="col-sm-9">
                <div class="form-check form-check-inline">
                    <%= f.radio_button :is_active, true, class: "form-check-input"  %>
                    <%= f.label :is_active, "販売中", class: "form-check-label" %>
                </div>
                <div class="form-check form-check-inline">
                    <%= f.radio_button :is_active, false, class: "form-check-input"  %>
                    <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
                </div>
            </div>
        </div>

        <div class ="row ml-5 mb-3">
            <div class = "col-sm-2">
            </div>
            <div class = "col-sm-4">
                <% if item.id.nil? %>
                    <%= f.submit '新規登録', class: 'btn btn-success w-50' %>
                <% else %>
                    <%= f.submit '変更を保存', class: 'btn btn-success w-50' %>
                <% end %>
            </div>
        </div>     

<% end %>