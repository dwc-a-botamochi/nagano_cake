<div class="container">
  <div class="row">
    <div class="col-2 mt-5 ml-5">
    <h4 class="text-center bg-light">商品一覧</h4>
    </div>
    <div class="col mt-5 ml-5 text-right">
      <%= link_to '＋', new_admin_item_path, class: 'btn btn-outline-secondary rounded-circle', style: 'font-size: 1rem;' %>
    </div>
  </div>

  <div class="row mt-3 mb-3">
    <div class="col ml-5">
    <table class='table'>
      <thead>
        <tr class="table-secondary">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr class="table-borderless">
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= number_with_delimiter(item.price) %></td>
            <td><%= item.genre.name %></td>
            <td>
            <span style="color: <%= item.is_active ? 'green' : 'gray' %>;">
              <%= item.is_active ? '販売中' : '販売停止中' %>
            </span>
            </td>
          </tr>
        <% end %>
      </tbody>

      <tfoot class="border-top">
        <tr>
          <td colspan="5" class="p-0"></td>
        </tr>
      </tfoot>
    </table>
    <div class="d-flex justify-content-center">
    <%= paginate @items %>
    </div>
  </div>
</div>