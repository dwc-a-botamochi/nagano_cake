<div class="container">
    <div class="row mt-3 mb-3">
    <h4>商品一覧</h4>
    </div>
<%= link_to '新規登録', new_admin_item_path, class: 'btn btn-success w-25' %>
  <div class="row mb-3">
  <table class='table'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= number_with_delimiter(item.price) %></td>
          <td><%= item.genre.name %></td>
          <td>
          <span style="color: <%= item.is_active ? 'green' : 'gray' %>;">
            <%= item.is_active ? '販売中' : '販売停止中' %>
          </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="d-flex justify-content-center">
  <%= paginate @items %>
  </div>
</div>