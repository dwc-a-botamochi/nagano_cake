<div class="container">
    <div class="row">
        <div class="col-2 mt-5 ml-5">
            <h4 class="text-center bg-light">商品詳細</h4>
        </div>
    </div>

    <div class="row mt-5 mb-3">
        <div class="col-md-4 ml-1">
        <%= image_tag @item.get_image(280,210), size: "280x210" %>
        </div>

        <div class="col-7 mt-1">
        <table class="w-100">
            <tr>
                <td class="pe-3 pb-3">商品名</td>
                <td class="pb-3"><%= @item.name %></td>
            </tr>
                <td class="pe-3 pb-3 align-top">商品説明</td>
                <td class="pb-3"><%= simple_format(@item.introduction) %></td>
            </tr>
            <tr>
                <td class="pe-3 pb-3">ジャンル</td>
                <td class="pb-3"><%= @item.genre.name %></td>
            </tr>
            <tr>
                <td class="pe-3 pb-3">税込価格<br>(税抜価格)</td>
                <td class="pb-3"><%= number_with_delimiter((@item.price * 1.1).floor) %>
                (<%= number_with_delimiter(@item.price) %>)
                円</td>
            </tr>
            <tr>
                <td class="pe-3 pb-3">販売ステータス</td>
                <td class="pb-3"><span style="color: <%= @item.is_active ? 'green' : 'gray' %>;">
                <%= @item.is_active ? '販売中' : '販売停止中' %>
                </span></td>
            </tr>
        
            <tr>
                <td class="pe-3 pt-3"></td>
                <td class="pt-3"><%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-success px-4 py-2' %></td>
            </tr>
        </table>
        </div>
    </div>
</div>