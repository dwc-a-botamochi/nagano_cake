<div class="container">
    <div class="row mt-3 mb-3">
    <h4>商品詳細</h4>
    </div>

    <div class="row mb-3">
        <div class="col-sm-4">
        <%= image_tag @item.get_image(200,200) %>
        </div>

        <div class="col-sm-8">
        <table>
            <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
            </tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
            </tr>
            <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
            </tr>
            <tr>
                <td>税込価格(税抜価格)</td>
                <td><%= number_with_delimiter((@item.price * 1.1).floor) %>
                (<%= number_with_delimiter(@item.price) %>)
                円</td>
            </tr>
            <tr>
                <td>販売ステータス</td>
                <td><span style="color: <%= @item.is_active ? 'green' : 'gray' %>;">
                <%= @item.is_active ? '販売中' : '販売停止中' %>
                </span></td>
            </tr>
        </table>
        <br>
        <%= link_to '編集する', edit_admin_item_path(params[:id]), class: 'btn btn-success' %>
        </div>
    </div>
</div>