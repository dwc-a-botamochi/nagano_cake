<% if genre.id.nil? %>
  <%= form_with model: [:admin, genre] do |f| %>
    <div>
      <%= f.label :name, "ジャンル名" %>
      <span class="col  ml-5 mr-5"><%= f.text_field :name, placeholder:"ジャンル名" %></span>
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: [:admin, genre] do |f| %>
    <div>
      <%= f.label :name, "ジャンル名" %>
      <span class="col  ml-5 mr-5"><%= f.text_field :name %></span>
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>