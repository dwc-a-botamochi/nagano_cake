<table class="table mt-5 mx-auto" style="width: 70%">
  <thead>
    <tr>
      <th class="table-active" style="width: 15%">会員ID</th>
      <th class="table-active" style="width: 25%">氏名</th>
      <th class="table-active" style="width: 35%">メールアドレス</th>
      <th class="table-active" style="width: 25%">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% customers.each do |customer| %>
        <td><%= customer.id %></td>
        <td> 
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == true %>
            <div style="color: red;">有効</div>
          <% elsif customer.is_active == false %>
            <div style="color: green;">退会</div>
          <% else %>
            <p>エラー</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate customers %>