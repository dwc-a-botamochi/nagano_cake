<table class="table">
  <thead>
    <tr>
      <th style="width: 10%">会員ID</th>
      <th style="width: 15%">氏名</th>
      <th style="width: 25%">メールアドレス</th>
      <th style="width: 10%">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% customers.each do |customer| %>
        <td><%= customer.id %></td>
        <td> 
          <%= link_to admin_customer_path(customer.id) do %>
            ########
            <%= customer.last_name, customer.first_name %><%#= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == true %>
            <div style="color: red;"><%= customer.is.active %></div>
          <% elsif customer.is_active == false %>
            <div style="color: green;"><%= customer.is.active %></div>
          <% else %>
            <p>エラー</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate customers %>