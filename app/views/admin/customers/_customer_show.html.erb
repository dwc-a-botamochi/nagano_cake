<table class="table">
  <thead>
    <tr>
      <th style="width: 30%"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= customer.id %></td>
    </tr> 
    <tr>
      <td>氏名</td>
      <td><%= customer.last_name %>  <%= customer.first_name %></td>
    </tr> 
    <tr>
      <td>フリガナ</td>
      <td><%= customer.last_name_kana%>  <%= customer.first_name_kana %></td>
    </tr> 
    <tr>
      <td>郵便番号</td>
      <td><%= customer.post_code %></td>
    </tr> 
    <tr>
      <td>電話番号</td>
      <td><%= customer.phone_number %></td>
    </tr> 
    <tr>
      <td>メールアドレス</td>
      <td><%= customer.email %>></td>
    </tr> 
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if customer.is_active == true %>
          <div style="color: red;"><%= customer.is.active %></div>
        <% elsif customer.is_active == false %>
          <div style="color: green;"><%= customer.is.active %></div>
        <% else %>
          <p>エラー</p>
      </td>
    </tr>
  </tbody>
</table>