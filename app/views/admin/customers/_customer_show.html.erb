<table class="table table-borderless">
  <thead>
    <tr>
      <th style="width: 20%"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= customer.last_name %>　<%= customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= customer.last_name_kana%>　<%= customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if customer.is_active == true %>
          <div style="color: red;">有効</div>
        <% elsif customer.is_active == false %>
          <div style="color: green;">退会</div>
        <% else %>
          <p>エラー</p>
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(customer.id), class: 'btn btn-success' %>
        <span class="ml-5"><%#= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-primary' %></span>
      </td>
    </tr>
  </tbody>
</table>